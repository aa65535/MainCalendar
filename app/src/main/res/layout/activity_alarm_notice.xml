<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_alarm_notice"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/black_overlay"
    android:orientation="vertical"
    android:weightSum="5">

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#00000000"
        android:layout_weight="1"
        />
    <ListView
        android:id="@+id/alarm_list"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:scrollbars="none"
        android:cacheColorHint="#00000000"
        android:listSelector="#00000000"
        android:background="#00000000"
        android:layout_gravity="center_vertical"
        android:layout_weight="3"
        android:divider="@null" />
    <com.jjforever.wgj.maincalendar.GradientShaderTextView
        android:id="@+id/alarm_tip"
        android:layout_width="match_parent"
        android:layout_height="@dimen/alarm_notice_height"
        android:text="@string/alarm_notice_tip"
        android:layout_weight="1"
        android:textSize="@dimen/alarm_tip_size"
        android:textColor="#90FFFFFF"
        android:background="#00000000"
        android:gravity="center_vertical|center_horizontal"
        android:layout_gravity="center_vertical|center_horizontal" />
</LinearLayout>
